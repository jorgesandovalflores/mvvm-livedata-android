<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Appandroid" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_wiener</item>
        <item name="colorPrimaryVariant">@color/green_wiener</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_wiener</item>
        <item name="colorSecondaryVariant">@color/green_wiener</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Appandroid.white">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Button -->
    <style name="button_primary_style" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_dp_4_12</item>
        <item name="android:background">@drawable/core_button_primary_selector</item>
        <item name="android:textColor">@color/core_button_primary_color</item>
        <item name="android:fontFamily">@font/sfuitext_semibold</item>
        <item name="android:textSize">@dimen/default_sp_2_7</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_secondary_style" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_dp_4_12</item>
        <item name="android:background">@drawable/core_button_secondary_selector</item>
        <item name="android:textColor">@color/core_button_secondary_color</item>
        <item name="android:fontFamily">@font/sfuitext_semibold</item>
        <item name="android:textSize">@dimen/default_sp_2_7</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbar_secondary_text" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/default_sp_2_9</item>
        <item name="android:textColor">@color/green_wiener</item>
    </style>

    <style name="toolbar_primary_text" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/default_sp_2_9</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Theme fonts -->
    <style name="text_label_form" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/default_sp_2_7</item>
    </style>

    <style name="text_body_form" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_regular</item>
        <item name="android:textSize">@dimen/default_sp_2_7</item>
    </style>

    <style name="text_error_form" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_regular</item>
        <item name="android:textSize">@dimen/default_sp_2_5</item>
    </style>

    <style name="text_button" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_semibold</item>
        <item name="android:textSize">@dimen/default_sp_2_7</item>
    </style>

    <style name="text_link" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/default_sp_2_7</item>
    </style>

    <style name="text_extras" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/default_sp_4_3</item>
    </style>

    <style name="text_headline" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_bold</item>
        <item name="android:textSize">@dimen/default_sp_2_8</item>
    </style>

    <style name="text_navbar" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/default_sp_2_9</item>
    </style>

    <style name="text_title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">@dimen/default_sp_4_4</item>
    </style>

    <style name="text_tab_bar" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_bold</item>
        <item name="android:textSize">@dimen/default_sp_4_3</item>
    </style>

    <style name="text_normal" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfuitext_regular</item>
        <item name="android:textSize">@dimen/default_sp_4_3</item>
    </style>

    <!-- Theme fonts colors -->
    <style name="text_label_form.gray1">
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="text_label_form.gray2">
