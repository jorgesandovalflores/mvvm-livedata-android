    <style name="text_navbar.green_wiener">
        <item name="android:textColor">@color/green_wiener</item>
    </style>

    <style name="text_navbar.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_navbar.gray">
        <item name="android:textColor">@color/gray_wiener</item>
    </style>

    <style name="text_title.gray2">
        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="text_title.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_title.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_tab_bar.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_tab_bar.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_tab_bar.green">
        <item name="android:textColor">@color/green_wiener</item>
    </style>

    <style name="text_normal.gray2">
        <item name="android:textColor">@color/gray2</item>
    </style>

    <!-- bottom sheet -->
    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>