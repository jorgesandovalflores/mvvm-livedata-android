    <style name="text_button.gray1">
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="text_button.gray2">
        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="text_button.green">
        <item name="android:textColor">@color/green_wiener</item>
    </style>

    <style name="text_button.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_link.gray1">
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="text_link.gray2">
        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="text_link.green_wiener">
