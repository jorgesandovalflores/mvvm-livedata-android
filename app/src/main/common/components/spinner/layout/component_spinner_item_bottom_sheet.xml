<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/component_spinner_ic_new_check_primary"
        android:layout_marginStart="@dimen/default_dp_4_6"
        android:layout_marginTop="@dimen/default_dp_4_2"
        android:layout_marginBottom="@dimen/default_dp_4_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_dp_4_4"
        android:layout_marginEnd="@dimen/default_dp_4_4"
        android:maxLines="1"
        tools:text="Title..."
        app:layout_constraintStart_toEndOf="@id/ivCheck"
        app:layout_constraintTop_toTopOf="@id/ivCheck"
        app:layout_constraintBottom_toBottomOf="@id/ivCheck"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>